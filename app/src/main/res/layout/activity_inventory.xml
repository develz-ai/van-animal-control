<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9DA"
    tools:context=".InventoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:id="@+id/dogFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/imageDogFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="16sp"
                android:paddingTop="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="8sp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/dog_filter" />

            <TextView
                android:id="@+id/textDogFilter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="DOGS"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/catFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/imageCatFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="16sp"
                android:paddingTop="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="8sp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/cat_filter" />

            <TextView
                android:id="@+id/textCatFilter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="CATS"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/birdFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/imageBirdFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="16sp"
                android:paddingTop="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="8sp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/bird_filter" />

            <TextView
                android:id="@+id/textBirdFilter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="BIRDS"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rabbitFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/imageRabbitFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="16sp"
                android:paddingTop="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="8sp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/rabbit_filter" />

            <TextView
                android:id="@+id/textRabbitFilter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="RABBITS"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>